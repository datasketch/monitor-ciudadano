mixin social
  div.socialnav
    each link in socialLinks
      a.soclink(href=link.href id=link.icon target="_blank")

mixin nav
  div.navmenu
    each link in navLinks
      .navlink(class=`${section === link.key ? 'active' : ''} ${link.submenu ? 'active-level' : ''} ${link.label == 'Elecciones y contratos' ? 'eyc' : ''}`)
        a(href=link.href) #{link.label.toUpperCase()}

mixin header
  header.header
    nav.headernav(id='navMenu')
      a(href='/')
        .navitem(class='logo_monitor')
      div.navitem(class='topnav', id='menuContainer')
        +nav
        +social
      a.navitem(id='hamburger' href='javascript:void(0);', onclick="function dropdownMenu() {var x = document.getElementById('navMenu');if (x.className === 'headernav') {x.className += ' responsive';} else {x.className = 'headernav';}} dropdownMenu();")

      
